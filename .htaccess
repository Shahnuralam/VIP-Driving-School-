# Laravel root .htaccess - use this when document root points to Laravel root (e.g. public_html)
# and you cannot change it to public_html/public.
# This sends requests to the public folder so Laravel and assets work.

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Serve existing files/dirs from public/ (CSS, JS, images)
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f [OR]
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -d
    RewriteRule ^(.*)$ public/$1 [L]

    # Everything else to Laravel front controller
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>
